{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/types", "./node_modules/@types"], // Ensure type roots include node_modules/@types
    "experimentalDecorators": true, // Enable experimental decorators
    "emitDecoratorMetadata": true // Emit metadata for decorators
  },
  "include": [
    "src/**/*", // Ensure this includes all relevant source files
    "src/types/**/*.d.ts" // Ensure this path is correct
  ],
  "exclude": [
    "node_modules"
  ]
}
